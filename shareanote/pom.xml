<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.robert</groupId>
	<artifactId>sharenote</artifactId>
	<packaging>war</packaging>
	<version>1.0</version>
	<name>Share a Notes - Web GUI and business tier</name>

	<properties>
		<jsf-myfaces.version>2.0.3</jsf-myfaces.version>
		<jsf-ri.version>1.2_15</jsf-ri.version>
		<icefaces.version>3.1.0</icefaces.version>
		<maven.jetty.plugin.version>6.1.22</maven.jetty.plugin.version>
		<log4j.version>1.2.13</log4j.version>
	</properties>

	<repositories>
		<repository>
			<id>maven2-repository.org.icefaces</id>
			<name>ICEfaces Repository</name>
			<url>http://anonsvn.icefaces.org/repo/maven2/releases/</url>
			<layout>default</layout>
		</repository>
		<repository>
			<id>EclipseLink</id>
			<url>http://download.eclipse.org/rt/eclipselink/maven.repo</url>
		</repository>
	<repository> 
		<id>Google GUICE</id> 
		<name>Google guice</name> 
		<url>https://repository.jboss.org/nexus/content/repositories/thirdparty-uploads/</url> 
		<layout>default</layout> 
	</repository>
	</repositories>

	<build>
		<outputDirectory>war/WEB-INF/classes</outputDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin
                </artifactId>
				<version>2.4.3</version>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
				<executions>
					<execution>
						<id>process-test-resources</id>
						<phase>process-test-resources</phase>
						<goals>
							<goal>testResources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/test-classes</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>process-resources</id>
						<phase>process-resources</phase>
						<goals>
							<goal>resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/war/WEB-INF/classes</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>copy-resources</id>
						<phase>process-resources</phase>
						<goals>
							<goal>resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/${project.build.finalName}</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources</directory>
									<includes>
										<include>**/persistence.xml</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>utf-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<warName>shareanote</warName>
					<webappDirectory>${project.build.directory}/${project.build.finalName}</webappDirectory>
					<packagingExcludes>WEB-INF/lib/activation-1.1.jar,WEB-INF/lib/ejb-3.0.jar,WEB-INF/lib/jaxb-api-2.1.jar,WEB-INF/lib/jaxb-impl-2.1.6.jar,WEB-INF/lib/jaxws-api-2.1.jar,WEB-INF/lib/jaxws-rt-2.1.3.jar,WEB-INF/lib/jsr181-api-1.0-MR1.jar,WEB-INF/lib/jsr250-api-1.0.jar,WEB-INF/lib/mimepull-1.1.jar,WEB-INF/lib/resolver-20050927.jar,WEB-INF/lib/saaj-api-1.3.jar,WEB-INF/lib/saaj-impl-1.3.jar,WEB-INF/lib/sjsxp-1.0.jar,WEB-INF/lib/stax-api-1.0.jar,WEB-INF/lib/stax-ex-1.2.jar,WEB-INF/lib/streambuffer-0.7.jar,WEB-INF/lib/jsf-impl-2.0.2.jar,WEB-INF/lib/jsf-api-2.0.2.jar,WEB-INF/lib/servlet-api-2.5.jar,
						WEB-INF/lib/ejb-api-3.0.jar,
						WEB-INF/lib/xercesImpl-2.6.2.jar,
						WEB-INF/lib/xercesImpl-2.8.1.jar,
						WEB-INF/lib/xmlParserAPIs-2.0.0.jar,
						WEB-INF/lib/xml-apis-1.3.03.jar,
						WEB-INF/lib/postgresql-8.3-603.jdbc4.jar,
						WEB-INF/lib/gmbal-api-only-3.1.0-b001.jar,
						WEB-INF/lib/ha-api-3.1.8.jar,
						WEB-INF/lib/istack-commons-runtime-2.4.jar,
						WEB-INF/lib/javaee-api-6.0-2.jar,
						WEB-INF/lib/javax.annotation-3.1.1.jar,
						WEB-INF/lib/javax.persistence-2.0.0.jar,
						WEB-INF/lib/eclipselink-2.2.0.jar,
						WEB-INF/lib/jaxb-api-2.2.4.jar,
						WEB-INF/lib/jaxb-impl-2.2.5-b06.jar,
						WEB-INF/lib/jaxws-api-2.2.7.jar,
						WEB-INF/lib/jaxws-rt-2.2.6-promoted-b12.jar,
						WEB-INF/lib/postgresql-8.3-603.jdbc4.jar,
						WEB-INF/lib/txw2-20110809.jar,
						WEB-INF/lib/management-api-3.0.0-b012.jar,
						WEB-INF/lib/mimepull-1.8.jar,
						WEB-INF/lib/policy-2.3.1.jar,
						WEB-INF/lib/relaxngDatatype-20020414.jar,
						WEB-INF/lib/saaj-api-1.3.4.jar,
						WEB-INF/lib/saaj-impl-1.3.16.jar,
						WEB-INF/lib/stax-api-1.0-2.jar,
						WEB-INF/lib/stax2-api-3.1.1.jar,
						WEB-INF/lib/streambuffer-1.4.jar,
						WEB-INF/lib/woodstox-core-asl-4.1.2.jar,
						WEB-INF/lib/stax-ex-1.6.jar,
						WEB-INF/lib/javax.faces-2.1.6.jar,
						WEB-INF/lib/myfaces-api-2.1.9.jar,
						WEB-INF/lib/myfaces-impl-2.1.9.jar,
						WEB-INF/classes/META-INF/persistence.xml	
                    </packagingExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<ejbVersion>3.1</ejbVersion>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>dbunit-maven-plugin</artifactId>
				<version>1.0-beta-3</version>
				<configuration>
					<driver>org.apache.derby.jdbc.ClientDriver</driver>
					<username>sharenoteuser</username>
					<password>user</password>
					<url>jdbc:derby://54.246.158.243:1527/sharenote_db</url>
					<ordered>true</ordered>
					<schema>SHARENOTEUSER</schema>
					<!-- Backup -->
					<dest>src/test/resources/database_backup.xml</dest>
					<!-- Restore -->
					<type>CLEAN_INSERT</type>
					<src>src/test/resources/database_backup.xml</src>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.apache.derby</groupId>
						<artifactId>derbyclient</artifactId>
						<version>10.6.1.0</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.robert</groupId>
			<artifactId>common</artifactId>
			<version>0.1</version>
		</dependency>
		<dependency>
